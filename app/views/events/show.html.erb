<div class="card">
  <h4 class="card-header bg-success">
    <%= @event.title %>
  </h4>
  <div class="card-body">
    <p class="card-text"><strong>Description: </strong><%= @event.description %></p>
    <p class="card-text"><strong>Date: </strong>  <%= @event.date %></p>
    <p class="card-text"><strong>Location: </strong>  <%= @event.date %></p>
    <p class="card-text"><strong>By </strong> <%= @event.user.name %></p>
    <p class="card-text"><strong>Attendees:</strong></p>
    <ul class="list-group list-group-flush">
      <% @event.attendees.each do |a| %>
        <li class="list-group-item"><%= a.name%></li>
      <%end%>
    </ul>
    <button type="button" class="btn btn-success"><%= link_to 'Go', attendances_path(:event_id => @event.id, :user_id => current_user.id), :method => :post %></button>
  </div>
</div>




