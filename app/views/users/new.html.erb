<%user_errors%>

<% @user.errors.full_messages.each do |msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>

<div class="container">
  <h1>Register</h1>
  <div class="w-25 border border-secondary mt-3 p-3 rounded">
    <%= form_for @user, url: {action: "create"} do |f| %>
      Name: <%= f.text_field :name, placeholder: "Only first name", class:"form-control my-2 #{@uclas1}"%><br />
      Email: <%= f.email_field :email, placeholder: "example@hotmail.com", class:"form-control my-2 #{@uclas2}" %><br />
      <%= f.submit "Create", class: 'btn btn-success my-2' %>
    <% end %>
 </div>
</div>